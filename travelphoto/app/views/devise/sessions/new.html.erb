<div class="egawa2">
  <div class='container'>
    <br>
      <h2 class="row m-3">〜ログイン〜</h2>
        <%= form_with model: @user, url: user_session_path, local: true do |f| %>
          <div class="field">
            <%= f.label :メールアドレス %><br />
            <%= f.text_field :email, autofocus: true, class: "email" %>
          </div>
          <div class="field">
            <%= f.label :パスワード %><br />
            <%= f.password_field :password, autocomplete: "off", class: "password" %>
          </div>
          <% if devise_mapping.rememberable? %>
            <div class="field">
              <%= f.check_box :remember_me %>
              <%= f.label :ユーザー名、パスワードを記録 %>
            </div>
          <% end -%>
        <div class="actions">
          <%= f.submit "ログイン" ,class: 'btn btn-sm btn-primary'%>
        </div>
      <% end %>
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>