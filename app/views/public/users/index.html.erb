<div class="egawa">
  <div class="container">
    <div class="row">
      <div class="col-md-3">
        <br>
        <h3>ユーザーページ</h3>
        <table class='table'>
	         <th>ユーザーネーム</th>
	         <th><%= @customer.name %></th>
          </tr>
          <tr>
            <th>フォロー数: <%= @customer.followings.count %></th>
            <th><%= link_to @customer.followings.count, user_followings_path(@customer) %></th>
          </tr>
          <tr>
            <th>フォロワー数<%= @customer.followers.count %></th>
            <th><%= link_to @customer.followers.count, user_followers_path(@customer) %></th>
          </tr>
        </table>

        <div class='row'>
          <% if current_customer != @customer %>
            <% if current_customer.following?(@customer) %>
              <%= link_to "フォロー外す", user_relationships_path(@customer.id), method: :delete, class: "btn btn-info" %>
            <% else %>
            <%= link_to "フォローする", user_relationships_path(@customer.id), method: :post, class: "btn btn-success" %>
            <% end %>
         <% end %>
       </div>
     </div>
     <div class="col-md-8 offset-md-1">
       <h2>新規ページ</h2>
        <% @posts.each do |post| %>
          <div class="col-md-3">
  		      <tr>
    		      <td>
    		        <%= link_to(post_path(post)) do  %>
                <%= attachment_image_tag(post,:image, size: "180x150", format: 'jpeg',fallback: "no_image.jpg") %>
                <% end %>
    		      </td>
    		    </tr>
    		    <tr>
    		      <td>
    		       撮影場所 <%= post.title %><br><br>
    		      </td>
    		    </tr>
    		  </div>
    		<% end %>
     </div>
   </div>
 </div>
</div>