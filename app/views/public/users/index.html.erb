<div class="egawa">
  <div class="container">
    <div class="row">
      <div class="col-md-3">
        <br>
        <h3>User Info</h3>
        <table class='table'>
          <tr><p><%#= @customer.inspect %></p>
            <%= attachment_image_tag(@customer, :profile_image, :fill, 100, 100, fallback: "no_image.jpg") %>
          </tr>
          <tr>
	         <th>ユーザーネーム</th>
	         <th><%= @customer.name %></th>
          </tr>
          <tr>
            <!--<th>フォロー数: <#%= @customer.followings.count %></th>-->
            <!--<th><#%= link_to @customer.followings.count, following_user_path(@customer) %></th>-->
          </tr>
          <tr>
            <!--<th>フォロワー数<#%= @cuatomer.followwers.count %></th>-->
            <!--<th><#%= link_to @customer.followers.count, followers_user_path(@customer) %></th>-->
          </tr>
        </table>

        <div class='row'>
          <% if current_customer != @customer %>
            <% if current_customer.following?(@customer) %>
              <%= link_to "フォロー外す", user_relationships_path(@customer.id), method: :delete, class: "btn btn-info" %>
            <% else %>
            <%= link_to "フォローする", user_relationships_path(@customer.id), method: :post, class: "btn btn-success" %>
            <% end %>
          <% else %>
            <%= link_to '',edit_user_path(@customer),class: "btn btn-outline-secondary btn-block fas fa-user-cog edit_user_#{@customer.id}" %>
         <% end %>
       </div>
     </div>
   </div>
 </div>
</div>