<div class="egawa">
  <div class="container">
    <div class="row">
      <div class="col-md-3">
        <br>
        <h3>ユーザーページ</h3>
        <table class='table'>
          <tr>
	         <th>ユーザーネーム</th>
	         <th><%= @customer.name %></th>
          </tr>
        </table>
      </div>
     <div class="col-md-8 offset-md-1">
       <h2>新規ページ</h2>
        <% @posts.each do |post| %>
          <div class="col-md-3">
  		      <tr>
    		      <td>
    		        <%= link_to(post_path(post)) do  %>
                <%= attachment_image_tag(post,:image, size: "180x150", format: 'jpeg',fallback: "no_image.jpg") %>
                <% end %>
    		      </td>
    		    </tr>
    		    <tr>
    		      <td>
    		       撮影場所 <%= post.title %><br><br>
    		      </td>
    		    </tr>
    		  </div>
    		<% end %>
     </div>
   </div>
 </div>
</div>