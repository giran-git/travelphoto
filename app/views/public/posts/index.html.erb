<div class="egawa">
  <div class='container'>
    <div class='row'>
      <div class='col-md-2'>
        <%= link_to 'posts/new' do %>
          <span class="fas fa-plus size" ></span>
        <% end %>
      </div>
      <div class='col-md-8'>
        <h1>投稿一覧</h1>
      </div>
    </div>
    <div class='container'>
      <div class="row">
  		  <% @posts.each do |post| %>
  		    <div class="col-md-3">
            <tr>
              <th>
                <%= link_to(post_path(post)) do  %>
                <%= attachment_image_tag(post, :image,size: "180x130", fallback: "no_image.jpg") %>
                <% end %>
              </th>

              <br>
              <br>
              <th><%= link_to post.title, post_path(post)  %></th>
              <br>
              <div id="post_<%= post.id %>">
                <%= render 'public/favorites/favorite-btn' ,  post: post %>
              </div>
            </tr>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
