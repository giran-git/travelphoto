<div class="egawa">
  <% flash.each do |name, msg| %>
      <div class="alert alert-<%= name %>">
        <%= msg %>
      </div>
    <% end %>
  <div class='container'>
    <div class='row'>
      <div class='col-md-2'>
        <%= link_to 'posts/new' do %>
          <span class="fas fa-plus size" ></span>
        <% end %>
      </div>
      <div class='col-md-8'>
        <h1>投稿一覧</h1>
      </div>
    </div>
    <div class='container'>
      <div class="row">
  		  <% @posts.each do |post| %>
  		    <div class="post-box">
  		      <table class="table">
  		        <tr>
                <th>
                  <%= link_to(post_path(post)) do  %>
                  <%= attachment_image_tag(post, :image,size: "180x130", fallback: "no_image.jpg") %>
                  <% end %>
                </th>
              </tr>
              <tr>
                <th><%= link_to post.title, post_path(post)  %>
                  <div id="post_<%= post.id %>">
                    <%= render 'public/favorites/favorite-btn' ,  post: post %>
                  </div>
                </th>
              </tr>
  		      </table>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
